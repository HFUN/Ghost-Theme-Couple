{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
{{! If we have a tag cover, display that - else blog cover - else nothing }}
<div class="col-md-8">
  <div class="home-content-area">
    {{! The main content area on the homepage }}
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
  </div><!-- article-index -->
  <div class="eof-line"></div>
</div><!-- col-md-8 -->
<div class="col-md-3">
  <aside id="sidebar-fix" class="tag-sidebar">
    <h3 class="text-center padding-left-right">
      <a class="tag-btn" href="{{tag.url}}"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> {{tag.name}}</a>
    </h3>
    <p>
      <img class="line-border img-responsive center-block" src="{{#if tag.image}}{{tag.image}}{{else}}http://7xj0tn.com1.z0.glb.clouddn.com/img/site/for-other-tags.jpg{{/if}}" style="width: 160px; border-radius: 50%;">
    </p>
    <blockquote>
      <p class="padding-left-right">{{#if tag.description}}{{tag.description}}{{else}}该标签目前还没有描述{{/if}}</p>
      <p class="padding-left-right">该标签下目前共有 {{pagination.total}} 篇内容。</p>
    </blockquote>
    <a class="fixed-info-btn" href="#sidebar-fix">
      <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
    </a>
    <a class="fixed-top-btn" href="#couple-top" title="回到顶部">
      <span class="glyphicon glyphicon-plane" aria-hidden="true"></span>
    </a>
  </aside>
</div><!-- col-md-3 -->
</div><!-- row home-main -->
</main>